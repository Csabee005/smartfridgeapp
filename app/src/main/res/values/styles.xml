<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorGreenPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorGreenPrimaryDark</item>
        <item name="colorAccent">@color/colorYellowSecondaryLight</item>
    </style>


    <!-- =============================================================== -->
    <!-- Green and Yellow styles -->
    <!-- =============================================================== -->

    <style name="sidebar_top_view_gy">
        <item name="android:background">@color/colorYellowSecondary</item>
    </style>

    <style name="sidebar_bottom_view_gy">
        <item name="android:background">@color/colorGreenPrimaryLight</item>
    </style>

    <style name="light_background_gy">
        <item name="android:background">@color/colorYellowSecondaryLight</item>
    </style>

    <style name="textview_content_gy">
        <item name="android:textColor">@color/colorBlackPrimary</item>
    </style>

    <style name="background_against_secondary_gy">
        <item name="android:tint">@android:color/black</item>
    </style>

    <style name="toolbar_gy">
        <item name="android:background">@color/colorGreenPrimaryLight</item>
    </style>

    <!-- =============================================================== -->
    <!-- Black and Red theme -->
    <!-- =============================================================== -->

    <style name="sidebar_top_view_br">
        <item name="android:background">@color/colorRedSecondaryDark</item>
    </style>

    <style name="sidebar_bottom_view_br">
        <item name="android:background">@color/colorBlackPrimary</item>
    </style>

    <style name="light_background_br">
        <item name="android:background">@color/colorBlackPrimaryLight</item>
    </style>

    <style name="textview_content_br">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="background_against_secondary_br">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="toolbar_br">
        <item name="android:background">@color/colorBlackPrimary</item>
    </style>

    <!-- =============================================================== -->
    <!-- Blue and Cyan theme -->
    <!-- =============================================================== -->

    <style name="sidebar_top_view_bc">
        <item name="android:background">@color/colorBluePrimary</item>
    </style>

    <style name="sidebar_bottom_view_bc">
        <item name="android:background">@color/colorCyanSecondaryDark</item>
    </style>

    <style name="light_background_bc">
        <item name="android:background">@color/colorBluePrimaryLight</item>
    </style>

    <style name="textview_content_bc">
        <item name="android:textColor">@color/colorBlackPrimary</item>
    </style>

    <style name="background_against_secondary_bc">
        <item name="android:tint">@android:color/black</item>
    </style>

    <style name="toolbar_bc">
        <item name="android:background">@color/colorCyanSecondaryDark</item>
    </style>

</resources>
