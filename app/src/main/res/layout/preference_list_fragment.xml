<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="12"
    style="?lightNoBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="11"
        android:orientation="horizontal"
        android:background="@android:color/transparent">
        <EditText
            android:id="@+id/edtxtFilterByFridgeNamePreferenceList"
            android:hint="@string/filterByFridgeName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            style="?textViewContent"/>
        <ImageButton
            android:id="@+id/btnFilterStartPreferenceList"
            android:src="@drawable/ic_play"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            style="?iconBackgroundAgainstSecondary"/>
        <ImageButton
            android:id="@+id/btnAddNewPreferencePreferenceList"
            android:src="@drawable/ic_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            style="?iconBackgroundAgainstSecondary"/>
        <ImageButton
            android:id="@+id/editPreferencePreferenceList"
            android:src="@drawable/ic_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            style="?iconBackgroundAgainstSecondary"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lstVwPreferencesList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:background="@android:color/transparent"/>

</LinearLayout>